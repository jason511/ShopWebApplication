@model List<ShopWebApplication.Models.Product>

@{
    ViewData["Title"] = "產品列表";
}
@section styles
{
    <style>
        .product-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card {
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
        }

        .footer {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 1200px;
        }
    </style>
}
<div class="container my-5">
    <h1 class="text-center my-4">產品列表</h1>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="@Url.Content("~/Image/" + product.Image)" class="card-img-top product-image" alt="@product.ProductName">
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">
                            <span class="text-primary fw-bold">$@product.Price</span>
                            @if (product.Discount > 0)
                            {
                                <span class="badge bg-danger ms-2">折扣 @product.Discount%</span>
                            }
                        </p>
                        <button class="btn btn-primary w-100">加入購物車</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>